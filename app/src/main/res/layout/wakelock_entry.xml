<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/wakelock_holder"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	android:orientation="vertical"
	android:paddingStart="?android:listPreferredItemPaddingLeft"
	android:paddingTop="8dp"
	android:paddingEnd="?android:listPreferredItemPaddingRight"
	android:paddingBottom="8dp">

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/wakelock_tag"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textStyle="bold" />

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/wakelock_footer_acquiring_packages"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp" />

</LinearLayout>